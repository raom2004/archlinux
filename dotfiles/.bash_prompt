#!/bin/bash
#
# ~/.bash_prompt
#
# Dependencies:
#  ~/.bash_functions
#  Git prompt support: https://github.com/magicmonty/bash-git-prompt.git
#  Customized theme: ~/.git-prompt-colors.sh 

## source dependencies
my_file=~/.bash_functions
[[ -r "${my_file}" ]] && [[ -f "${my_file}" ]] && source "${my_file}"
unset my_file

